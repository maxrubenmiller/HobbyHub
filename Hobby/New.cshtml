@model Hobby

<a asp-action="Dashboard" asp-controller="Hobby" class="btn btn-warning">Dashboard</a>
<a asp-action="Logout" asp-controller="Home" class="btn btn-danger">Logout</a>

<h1>Create a Hobby!</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" asp-controller="Hobby" method="post">
    <label asp-for="Title"></label>
    <input asp-for="Title"><br>
    <label asp-for="Description"></label>
    <input asp-for="Description"><br>
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
    <input type="submit" value="Create" class="btn btn-outline-warning">

</form>